{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

  {% block body %}

  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <!-- Blog Entries Column -->
      <div class="col-md-8">
        <h1 class="my-4">Bienvenue sur le blog de D@rklo</h1>

        <!-- BDD Posts -->
        {% for post in posts %}
        <div class="card mb-4">
          <img class="card-img-top" src="{{ post.image }}" alt="Card image cap">
          <div class="card-body">
            <h2 class="card-title"> {{ post.titre }} </h2>
            <p class="card-text"> {{ post.contenu|u.truncate (100, '...', false ) }} </p>
            <a href="/news/{{ post.slug }}/{{ post.id }}" class="btn btn-primary">Voir Plus &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Post√© le {{ post.createdAt|date('d/m/Y') }} par
            <a href="#"> {{ post.user.pseudo }}</a>
          </div>
        </div>
        {% endfor %}

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
          </li>
        </ul>
      </div>
      {% block sidebar %} 
        {{ parent() }}
      {% endblock %}
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
{% endblock %}
