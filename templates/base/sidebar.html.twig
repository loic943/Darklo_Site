<!-- Sidebar Widgets Column -->
<div class="col-md-4">
  <!-- Search Widget -->
  <div class="card my-4">
    <h5 class="card-header">Rechercher</h5>
      <div class="card-body">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Votre recherche...">
          <span class="input-group-append">
            <button class="btn btn-secondary" type="button">Go!</button>
          </span>
        </div>
      </div>
  </div>
  <!-- Categories Widget -->
  <div class="card my-4">
    <h5 class="card-header">Categories</h5>
    <div class="card-body">
      <div class="row">
      {% for categorie in categories %}
        <div class="col-4">
          <ul class="list-unstyled mb-0">
            <li>
              <a class="link-dark" href="/categorie/{{ categorie.slug }}">{{ categorie.nom }}</a>
            </li>
          </ul>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
  <!-- Side Widget -->
  <div class="card my-4">
    <h5 class="card-header">Widget</h5>
    <div class="card-body">
      Widget libre pouvant contenir, par exemple, les logos des partenaires et sites amis!
    </div>
  </div>
</div>
