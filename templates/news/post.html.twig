{% extends 'base.html.twig' %}

{% block title %}{{ post.slug }}{% endblock %}

{% block body %}

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">{{ post.titre }}</h1>

        <!-- Author -->
        <p class="lead">
          par
          <a href="#">{{ post.user.pseudo}}</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Post√© le {{ post.createdAt|date('d/m/Y') }}</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="{{ post.image }}" alt="">

        <hr>

        <!-- Post Content -->
        <p>{{post.contenu}}</p>

        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
          <h5 class="card-header">Laissez un commentaire:</h5>
          <div class="card-body">
            <form>
              <div class="form-group">
                <textarea class="form-control" rows="3"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
          </div>
        </div>

        {% for commentaire in commentaires %}

          <!-- Single Comment -->
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="{{ commentaire.user.avatar }}" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{ commentaire.user.pseudo}}</h5>
              {{ commentaire.contenu}}
            </div>
          </div>
        {% endfor %}

      </div>
      {% block sidebar %} 
        {{ parent() }}
      {% endblock %}
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

{% endblock %}
